#include <stdio.h>

int main() {
    int n, i, j, bt[20], p[20], wt[20], tat[20], pr[20], total = 0, pos, temp;
    float avg_wt, avg_tat;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter burst time and priority:\n");
    for (i = 0; i < n; i++) {
        printf("P[%d]:\n", i + 1);
        printf("Burst Time: ");
        scanf("%d", &bt[i]);
        printf("Priority (lower number = higher priority): ");
        scanf("%d", &pr[i]);
        p[i] = i + 1;
    }

    // Sort by priority
    for (i = 0; i < n; i++) {
        pos = i;
        for (j = i + 1; j < n; j++) {
            if (pr[j] < pr[pos])
                pos = j;
        }

        // Swap all relevant arrays
        temp = pr
